{# @var \App\Http\Response\Media\Resources\ResourceResults results #}
{# @var string pagination #}

{% extends 'Http/_Infrastructure/_Layout.twig' %}

{% block content %}
    <div class="relative py-16 px-4 sm:px-6 lg:px-8">
        <div class="relative max-w-7xl mx-auto">
            {% if pagination %}
                <div class="pb-2">
                    {{ pagination }}
                </div>
            {% endif %}
            <div class="mx-auto grid gap-5 max-w-sm {% if results.count > 1 %} md:max-w-4xl md:grid-cols-2 {% endif %}{% if results.count > 2 %} lg:grid-cols-3 lg:max-w-none {% endif%}">
                {% for item in results.items %}
                    <div class="flex flex-col rounded-lg shadow-lg overflow-hidden border border-gray-100">
                        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                            <div class="flex-1">
                                <a href="{{ item.url }}" class="block mt-2">
                                    <p class="text-xl font-semibold text-gray-900">
                                        {{ item.title|smartypants|widont }}
                                    </p>
                                </a>
                            </div>
                            <a
                                href="{{ item.url }}"
                                class="mt-3 inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-crimson hover:bg-crimson-dark"
                            >
                                Go to resource &raquo;
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% if pagination %}
                <div class="pt-6">
                    {{ pagination }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
