{# @var string pagination #}
{# @var \App\Http\Response\News\NewsList\NewsResults results #}

{% extends 'Http/_Infrastructure/_Layout.twig' %}

{% block content %}
    <div class="relative py-16 px-4 sm:px-6 lg:px-8">
        <div class="relative max-w-7xl mx-auto">
            {% if pagination %}
                <div class="pb-6">
                    {{ pagination }}
                </div>
            {% endif %}

            <div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">
                <div class="grid gap-16 lg:grid-cols-3 lg:gap-x-5 lg:gap-y-12">
                    {% for item in results.items %}
                        <div>
                            <a href="{{ item.url }}" class="block">
                                <p class="text-xl font-semibold text-gray-900">
                                    {{ item.title|smartypants }}
                                </p>
                                <p class="mt-3 text-base text-gray-500">
                                    {{ item.excerpt|striptags|smartypants }}
                                </p>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>

            {% if pagination %}
                <div class="pt-10">
                    {{ pagination }}
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}
