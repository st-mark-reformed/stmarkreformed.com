{# @var \App\Http\Response\Members\HymnsOfTheMonth\HymnResults results #}

{% extends 'Http/_Infrastructure/_MembersLayout.twig' %}

{% block membersContent %}
    <div class="min-h-full">
        <div class="flex-1 pb-8">
            <div class="mt-8">
                {# Activity list (smallest breakpoint only) #}
                <div class="shadow max-w-3xl mx-auto xl:ml-20 2xl:ml-24">
                    <ul role="list" class="mt-2 divide-y divide-gray-200 overflow-hidden shadow">
                        {% for item in results.items %}
                            <li>
                                <a
                                    href="{{ item.href }}"
                                    class="block px-4 py-4 bg-white hover:bg-gray-50"
                                >
                                    <span class="flex items-center space-x-4">
                                        <span class="flex-1 flex space-x-2">
                                            <span class="flex flex-col text-gray-500 text-sm {#truncate#}">
                                                <span class="{#truncate#} font-bold">{{ item.title|smartypants }}</span>
                                                {#<span><span class="text-gray-900 font-medium">$20,000</span> USD</span>#}
                                                <div>{{ item.content|smartypants|widont }}</div>
                                            </span>
                                        </span>
                                        {# Heroicon name: solid/chevron-right #}
                                        <svg class="flex-shrink-0 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                        </svg>
                                    </span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
