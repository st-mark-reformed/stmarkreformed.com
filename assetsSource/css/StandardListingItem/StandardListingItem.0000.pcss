.StandardListingItem:after {
    content: ' ';
    clear: both;
    display: table;
}

.StandardListingItem__PrimaryImageWrapper {
    float: left;
    margin-bottom: 10px;
    margin-right: 10px;
    width: 120px;
}

.StandardListingItem__Title,
.StandardListingItem__Title a {
    text-decoration: none;
    font-family: var(--headingFont);
    font-weight: var(--headingFontWeight);
    font-size: 22px;
    line-height: var(--headingLineHeight);
}

.StandardListingItem__Date {
    color: var(--gray);
    font-family: var(--headingFont);
    font-size: 12px;
    line-height: var(--headingLineHeight);
}

.StandardListingItem__Body {
    margin-top: 10px;
}

.StandardListingItem__Body p:last-child {
    margin-bottom: 0;
}
