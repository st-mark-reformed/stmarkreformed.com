.SiteNav__Hamburger {
    display: none;
}

.SiteNav__List {
    box-shadow: none;
    display: block;
    text-align: right;
    top: 0;
    width: calc(100vw - 170px);
}

.SiteNav__ListItem {
    display: inline-block;
    vertical-align: middle;
}

.SiteNav__Link {
    border-top: 0;
    padding: 16px calc(5.5vw - 35px);
}
