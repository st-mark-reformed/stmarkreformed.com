.PageWithSubNav {
    display: flex;
    flex-wrap: wrap;
}

.PageWithSubNav__Nav {
    width: 300px;
}

.PageWithSubNav__Content {
    width: calc(100% - 300px);
}

.PageWithSubNav__MobileExpander {
    display: none;
}

.PageWithSubNav__Nav {
    text-align: left;
}

.PageWithSubNav__NavList,
.PageWithSubNav__NavLists {
    display: block;
    margin-bottom: 80px;
    margin-top: 80px;
}

.PageWithSubNav__NavLists .PageWithSubNav__NavList {
    margin-top: 0;
}

.PageWithSubNav__NavLists .PageWithSubNav__NavList:last-child {
    margin-bottom: 0;
}

.PageWithSubNav__NavListItem:not(:last-child) .PageWithSubNav__NavListLink {
    border-bottom: none;
}

.PageWithSubNav__Content {
    margin-top: -86px;
}
